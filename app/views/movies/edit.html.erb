<%= simple_form_for @movie do |f| %>
  <%= f.input :title %>
  <%= f.input :plot %>
  <%= f.input :genre, collection: Movie::GENRE, label: "Category (please choose one of the given options)"    %>
  <%= f.submit "Save", class: "btn devise-button" %>
<% end %>

<%= link_to "Back to movies list", movies_path %>

